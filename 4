create database triggers;

use triggers;

create table customers(
id int primary key,
name varchar(25),
age int,
address varchar(50),
salary int
);

insert into customers(id,name,age,address,salary)
values
(1,'Ankith',24,'Karnataka',500000),
(2,'Chinmaye',23,'Andhra Pradesh',200000),
(3,'Vijetha',45,'Tamil Nadu',350000),
(4,'Vishnu Priya',44,'Kerla',350000),
(5,'Venu Gopal',50,'Telangana',400000);

alter table customers
modify salary int not null;



DELIMITER $$
CREATE TRIGGER trigger1
AFTER INSERT ON customers
FOR EACH ROW
BEGIN
    SET @salinserted = NEW.salary;
END$$
DELIMITER ;

insert into customers(id,name,age,address,salary)
values
(6,'Shripadraj',54,'Goa',300000);

select * from customers;
select @salinserted;

--update trigger

DELIMITER //
CREATE TRIGGER trigger2
AFTER UPDATE ON customers
FOR EACH ROW
BEGIN
    DECLARE oldsalary INT;
    DECLARE newsalary INT;
    SET oldsalary = OLD.salary;
    SET newsalary = NEW.salary;
    SET @saldifference = (NEW.salary - OLD.salary);
END//
DELIMITER ;


update customers
set salary=250000
where id=6;

select * from customers;
select @saldifference;



delimiter $$
create trigger trigger3
after delete on customers
for each row
begin
set @saldeleted=old.salary;
end
$$
delimiter;


delete from customers
where id=6;

select * from customers;
select @saldeleted;
